# Slack Configuration
SLACK_APP_TOKEN=xapp-1-xxxxx  # Socket Mode token (App-Level Token)
SLACK_BOT_TOKEN=xoxb-xxxxx    # Bot User OAuth Token
SLACK_SIGNING_SECRET=xxxxx    # Signing Secret for request verification

# Reddit Configuration
REDDIT_CLIENT_ID=xxxxx                    # Reddit OAuth app client ID
REDDIT_CLIENT_SECRET=xxxxx                # Reddit OAuth app client secret
REDDIT_USER_AGENT=reddit_listener:v0.1.0 (by /u/yourusername)
REDDIT_REDIRECT_URI=http://localhost:8080/callback  # OAuth callback URL

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-xxxxx  # OpenRouter API key
# OPENROUTER_MODEL=minimax/minimax-m2.1  # Optional: OpenRouter model (defaults to minimax/minimax-m2.1)

# Security
ENCRYPTION_KEY=xxxxx  # 32-byte hex string for token encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")

# Optional: Database path (defaults to ./data/tokens.db)
# DATABASE_PATH=./data/tokens.db
